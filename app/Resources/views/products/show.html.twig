{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ product.name }}</h1>

    <h3>
        Price: {{ product.price }} $
    </h3>


    {{ form_start(delete_form) }}
    <a class="btn btn-lg btn-primary" href="{{ path('products_edit', { 'id': product.id }) }}">Edit</a>
    <input class="btn btn-lg btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}

    <a href="{{ path('products_index') }}">Back to the list</a>

{% endblock %}
